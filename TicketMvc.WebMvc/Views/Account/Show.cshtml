@model IEnumerable<TicketMvc.Models.Show.ShowCreate>

<h2>All Shows</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Show Title</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var show in Model)
            {
                <tr>
                    <td>@show.ShowTitle</td>
                    <td>@show.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@show.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@show.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No shows available.</p>
}

<a asp-action="Create">Add New Show</a>
