@model TicketMvc.Models.User.UserLogin
@{
    ViewData["Title"] = "Log In";
}

<style>
    body {
        background: linear-gradient(to bottom, #888, #000);
        color: gray;
        font-family: Arial, sans-serif;
    }
    .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.6);
    }
    h1 {
        font-size: 64px;
        font-weight: bold;
        margin-bottom: 30px;
        text-shadow:
            -2px -2px 0 black,
            2px -2px 0 black,
            -2px 2px 0 black,
            2px 2px 0 black;
        color: yellow;
        text-align: center;
        }
    
    .form-floating input.form-control {
        color: white; 
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid gray;
    }
    
    .btn-primary {
        background-color: yellow;
        color: white;
        font-size: larger;
        border-color: gray;
    }
    .btn-primary:hover {
        background-color: greenyellow;
        border-color: white;

    }
    .text-danger {
        color: #dc3545;
    }
    .text-center {
        text-align: center;
    }
</style>

<div class="container">
    <h1 class="display-4 mb-3">Log In</h1>
    <form asp-action="Register" method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Username" placeholder="Username">
            <label asp-for="Username"></label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column gap-2">
            <button type="submit" class="btn btn-primary">Log In</button>
            <a asp-action="Register" asp-controller="Account" class="text-center py-2">
                Register as a new user
            </a>
        </div>
    </form>
</div>
