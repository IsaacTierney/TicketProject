@model TicketMvc.Models.User.UserRegister
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: linear-gradient(to bottom, #888, #000);
        color: black;
        font-family: Arial, sans-serif;
    }
    .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.6);
    }
    h1 {
        font-size: 64px;
        font-weight: bold;
        margin-bottom: 30px;
        text-shadow:
            -2px -2px 0 black,
            2px -2px 0 black,
            -2px 2px 0 black,
            2px 2px 0 black;
        color: yellow;
        text-align: center;
        }
    .form-floating label {
        color: gray;
    }
    .form-floating input.form-control {
        color: white; /* Changed color to white */
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .btn-primary {
        background-color: yellow;
        color: black;
        font-size: larger;
        border-color: white;
    }
    .btn-primary:hover {
        background-color: greenyellow;
        border-color: white;
        color: black;
    }
    .text-danger {
        color: #dc3545;
    }
    .text-center {
        text-align: center;
    }
</style>


<h1 class="display-4 mb-3">Create Account</h1>
<div asp-validation-summary="All"></div>
<form asp-action="Register" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Username" placeholder="Username">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="email" class="form-control" asp-for="Email" placeholder="Email">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column gap-2">
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-action="Login" asp-controller="Account" class="text-center py-2">
            Already have an account?
        </a>
    </div>
</form>
